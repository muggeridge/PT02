<%= render 'pages/level1_nav' %>
<h1><%= @project.name %></h1>

<p><strong>Users</strong></p>
<table cellpadding="5">
    <%@project.users.sort_by {|obj| obj.last_name}.each do |user| %>
        <tr>
            <td>
                <%= link_to user.last_name, user_path(user) %>
            </td>
        </tr>
    <%end%>

</table>


<p><strong>Add User to Project</strong></p>
<%= form_with model: ProjectRole do |form| %>
    <%= form.select :user, @user_last_names %>
    <%= form.hidden_field :project_id, value: @project.id %>
    <%= form.submit "Add selected user" %>
<% end %>
